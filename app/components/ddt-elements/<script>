<script>
	document.getElementById("content").addEventListener("keypress", makeNewLine)
	var enterstroke = 0;
	function makeNewLine(e){
		var content = document.getElementById("content").value;
		if(e.chrCode == 13){//Identify Enter Key
			enterstroke++;
			if(enterstroek == 2)
			{
				enterstroke = 0;
			}
			else
			{
				var value = content.substring(0,content.length-2);
			}
		}
	}
</script>
<body>
	<form id="post">
		<input type="text" name="title" placeholder="Title"/>
		<textarea name="content" id="content"></textarea>
	</form>
